pipeline {
  agent {
    kubernetes {
      label 'kaniko-agent'
      defaultContainer 'kaniko'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: kaniko-agent
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
    - cat
    tty: true
    volumeMounts:
    - name: docker-config
      mountPath: /kaniko/.docker
  volumes:
  - name: docker-config
    secret:
      secretName: dockerhub-secret
"""
    }
  }
  environment {
    IMAGE_TAG = "7"
    IMAGE_NAME = "singhsajal/ecommerce-frontend"
  }
  stages {
    stage('üì¶ Build & Push Docker Image using Kaniko') {
      steps {
        container('kaniko') {
          sh '''
            echo "üîç Checking mounted Docker config:"
            cat /kaniko/.docker/config.json || echo "‚ùå Docker config not found"

            /kaniko/executor \
              --context `pwd` \
              --dockerfile `pwd`/Dockerfile \
              --destination=docker.io/$IMAGE_NAME:$IMAGE_TAG \
              --destination=docker.io/$IMAGE_NAME:latest \
              --verbosity=info
          '''
        }
      }
    }
  }
  post {
    failure {
      echo "‚ùå Pipeline failed. Please check logs."
    }
    success {
      echo "‚úÖ Kaniko build and push successful!"
    }
  }
}
