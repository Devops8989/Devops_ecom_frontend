pipeline {
    agent any

    environment {
        IMAGE_NAME = "singhsajal/ecommerce-frontend"
    }

    parameters {
        string(name: 'BRANCH', defaultValue: 'staging', description: 'Git branch to build')
    }

    stages {
        stage('Checkout') {
            steps {
                  git credentialsId: 'githubtoken', branch: "${params.BRANCH}", url: 'https://github.com/singhsajal/ecommerce-frontend.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}")
                }
            }
        }

      stage('Push to Docker Hub') {
    steps {
        script {
            docker.withRegistry('https://index.docker.io/v1/', 'Dockerhub') {
                docker.image("${IMAGE_NAME}:${env.BUILD_NUMBER}").push()
            }
        }
    }
}

        stage('Deploy to Minikube') {
            steps {
                script {
                    sh """
                    kubectl config use-context minikube
                    kubectl set image deployment/frontend frontend=${IMAGE_NAME}:${env.BUILD_NUMBER} --namespace=frontend --record || kubectl apply -f k8s/deployment.yaml
                    """
                }
            }
        }
    }
}
